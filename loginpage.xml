<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDD7E4"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/i1"
            android:src="@drawable/shannyapp_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Shanny"
            android:id="@+id/shannyText"
            android:layout_below="@+id/i1"
            android:textColor="#FF88D3"
            android:gravity="center"
            android:textSize="30sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e1"
            android:background="@drawable/edittext"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/shannyText"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:ems="10"
            android:hint="User Name "
            android:layout_marginRight="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/e1"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/e2"
            android:hint="Password"
            android:layout_marginRight="20dp"
            android:gravity=""
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/b1"
            android:layout_below="@+id/e2"
            android:background="@drawable/button"
            android:text="LogIn"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:gravity="center"
            android:id="@+id/t1"
            android:textColor="#FF88D3"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/b1"
            android:onClick="show2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:id="@+id/line"
            android:text="__________________or____________________"
            android:layout_marginTop="15dp"
            android:textColor="#FF88D3"
            android:layout_below="@+id/t1"
            android:layout_marginRight="20dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogIn With Facebook"
            android:id="@+id/b2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/line"
            android:background="@drawable/button2"
            android:onClick="show3"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/b2"
            android:text="Don't have an account yet?"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/b2"
            android:id="@+id/t2"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="15dp"
            android:text="Sign Up"
            android:onClick="show4"
            android:textColor="#FF88D3"/>




    </RelativeLayout>

</ScrollView>