<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/app_bar_navigation__bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SearchView
            android:id="@+id/s1"
            android:layout_width="350dp"
            android:textAlignment="center"
            android:layout_height="78dp"
            app:queryHint="Search nanny near you"
            android:layout_marginTop="40dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:layout_marginTop="140dp"
            android:id="@+id/b1"
            android:background="@drawable/round_button"
            android:text="Mother's Helper"
            android:textColor="#FF88D3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="140dp"
            android:id="@+id/b2"
            android:textColor="#FF88D3"
            android:text="Date Night"
            android:textSize="10sp"
            android:background="@drawable/round_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"
            android:id="@+id/b3"
            android:background="@drawable/round_button"
            android:text="Last Minute"
            android:textSize="10sp"
            android:textColor="#FF88D3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/round_button"
            android:id="@+id/b4"
            android:textColor="#FF88D3"
            android:text="Part Time"
            android:textSize="10sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button"
            android:id="@+id/b5"
            android:text=" Full Time"
            android:textSize="10sp"
            android:textColor="#FF88D3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/round_button"
            android:id="@+id/b6"
            android:text="Others"
            android:textSize="10sp"
            android:textColor="#FF88D3"/>




    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation__bar"
        app:menu="@menu/activity_navigation__bar_drawer" />





</android.support.v4.widget.DrawerLayout>
